@page
@model FoodWeb.Pages.Admin.FactsModel
@{
}
<div class="row justify-content-center">
<div class="col-md-6 justify-content-center">
    <h2>Add Facts Page</h2>
    <br />
    <hr />
    <form method="post">
        <div class="col-md-12 justify-content-center">
            <label class="form-label">
                Clients
            </label>
        </div>
        <input class="form-control" asp-for="fact.Clients" />

        <div class="col-md-12 justify-content-center">
            <label class="form-label">
                Projects
            </label>
        </div>
        <input class="form-control" asp-for="fact.Projects" />

        <div class="col-md-12 justify-content-center">
            <label class="form-label">
                Hour of Support
            </label>
        </div>
        <input class="form-control" asp-for="fact.Hourofsupport" />
        <div class="col-md-12 justify-content-center">
            <label class="form-label">
                Workers
            </label>
        </div>
        <input class="form-control" asp-for="fact.workers" />
        <div>
            <br />
            <input type="submit" value="Add Fact" class="btn btn-success" />
        </div>
    </form>


</div>

</div>
