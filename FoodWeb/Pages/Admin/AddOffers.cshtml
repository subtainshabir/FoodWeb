@page
@model FoodWeb.Pages.Admin.AddOffersModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-6 justify-content-center">
        <h1>Add Offers</h1>
        <hr />
        <form method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label">
                    Offer Name
                </label>
                <input class="form-control" asp-for="offer.OfferName" />
            </div>
            <div>
                <label class="form-label">
                    Price
                </label>
                <input class="form-control" asp-for="offer.Price" />
            </div>
            <div>
                <label class="form-label">
                    Description
                </label>
                <input class="form-control" asp-for="offer.Desc" />
            </div>
            <div>

                <label class="form-label">
                    Image
                </label>
                <input class="form-control" asp-for="offer.Photo" />
            </div>
            <br />
            <div>
                <input type="submit" value="Add Offer" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>