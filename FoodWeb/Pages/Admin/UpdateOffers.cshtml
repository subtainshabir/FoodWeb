@page
@model FoodWeb.Pages.Admin.UpdateOffersModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-6 justify-content-center">
        <h1>Update Offers</h1>
        <hr />
        <form method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label">
                    Offer Name
                </label>
                <input class="form-control" asp-for="offer.OfferName" />
            </div>
            <div>
                <label class="form-label">
                    Price
                </label>
                <input class="form-control" asp-for="offer.Price" />
            </div>
            <div>
                <label class="form-label">
                    Description
                </label>
                <input class="form-control" asp-for="offer.Desc" />
                <input class="form-control" hidden asp-for="offer.id" />
            </div>
            <div>

                <label class="form-label">
                    Image
                </label>
                <input class="form-control" asp-for="offer.Photo" />
            </div>
            <br />
            <div>
                <input type="submit" value="Update Offer" class="btn btn-primary" />
            </div>

        </form>
    </div>
    <div class="col-md-4 justify-content-center">
        <div class="margin-top:150px; margin-left:200px">
            <img src="~/offers/@Model.offer.Image" height="180px" width="180px" />

        </div>
    </div>
</div>