@page
@model FoodWeb.Pages.Admin.UpdateDinnerModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-6 justify-content-center">
        <h1>Add Dinner</h1>
        <hr />
        <form method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label">
                    Dish Name
                </label>
                <input class="form-control" asp-for="dinner.DishName" />
                <input class="form-control" hidden asp-for="dinner.id" />
            </div>
            <div>
                <label class="form-label">
                    Ingredients
                </label>
                <input class="form-control" asp-for="dinner.Ingredients" />
            </div>
            <div>
                <label class="form-label">
                    Price
                </label>
                <input class="form-control" asp-for="dinner.Price" />
            </div>
            <div>

                <label class="form-label">
                    Image
                </label>
                <input class="form-control" asp-for="dinner.Phote" />
            </div>
            <br />
            <div>
                <input type="submit" value="Add Dish" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>