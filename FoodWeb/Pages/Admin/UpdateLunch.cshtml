@page
@model FoodWeb.Pages.Admin.UpdateLunchModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-6 justify-content-center">
        <h1>Add Lunch</h1>
        <hr />
        <form method="post" enctype="multipart/form-data">
            <div>
                <label class="form-label">
                    Dish Name
                </label>
                <input class="form-control" asp-for="launch.DishName" />
            </div>
            <div>
                <label class="form-label">
                    Ingredients
                </label>
                <input class="form-control" asp-for="launch.Ingredients" />
            </div>
            <div>
                <label class="form-label">
                    Price
                </label>
                <input class="form-control" asp-for="launch.Price" />
            </div>
            <div>

                <label class="form-label">
                    Image
                </label>
                <input class="form-control" asp-for="launch.Photo" />
                <input class="form-control" hidden asp-for="launch.id" />
            </div>
            <br />
            <div>
                <input type="submit" value="Update Dish" class="btn btn-primary" />
            </div>

        </form>
    </div>
    <div class="col-md-4 justify-content-center">
        <div class="margin-top:150px; margin-left:200px">
            <img src="~/menu_images/Lunch/@Model.launch.Image" height="180px" width="180px" />

        </div>
    </div>
</div>