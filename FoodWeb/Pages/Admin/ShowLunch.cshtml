@page
@model FoodWeb.Pages.Admin.ShowLunchModel
@{
}
<div class="row justify-content-center">
    <div class="justify-content-center col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Dish Name</th>
                    <th scope="col">Price</th>                 
                    <th scope="col">Ingredients</th>
                    <th scope="col">Ingredients</th>
                    <th scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.launch)
                {
                    <tr>
                        <th scope="row">@item.id</th>
                        <td>@item.DishName</td>
                        <td>@item.Price</td>
                        <td>@item.Ingredients</td>
                        <td><img src="~/menu_images/Lunch/@item.Image" height="80px" width="80px" /></td>

                        <td>
                            <a class="btn btn-success" asp-page="UpdateLunch" asp-route-id="@item.id">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>